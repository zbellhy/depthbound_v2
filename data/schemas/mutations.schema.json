{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "mutations.json",
  "type": "object",
  "required": [
    "schema_version",
    "slots",
    "mutations"
  ],
  "properties": {
    "schema_version": {
      "type": "integer"
    },
    "slots": {
      "type": "integer"
    },
    "mutations": {
      "type": "array",
      "items": {
        "type": "object",
        "required": [
          "id",
          "name",
          "mods"
        ]
      }
    }
  }
}